{
  "name": "logistics-company",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "CROSS_ENV=development nodemon src/index.ts --ext ts",
    "start": "CROSS_ENV=production dist/index.js",
    "build": "npx tsc",
    "introspect": "drizzle-kit introspect:pg --config=drizzle.config.ts",
    "generate": "drizzle-kit generate:pg --config=drizzle.config.ts",
    "migrate": "tsx -r dotenv/config src/db/migrate.ts",
    "generate:migration": "drizzle-kit generate:pg --config=drizzle.config.ts && tsx -r dotenv/config src/db/migrate.ts",
    "test:watch": "cross-env NODE_ENV=test node --test --watch --require ts-node/register tests/setup.test.ts",
    "test": "cross-env NODE_ENV=test node --test --require ts-node/register tests/setup.test.ts"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/hpp": "^0.2.6",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/pg": "^8.11.6",
    "@types/uuid": "^9.0.8",
    "drizzle-kit": "^0.20.18",
    "nodemon": "^3.1.0",
    "npm": "^10.7.0",
    "tsx": "^4.9.3",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "@types/dotenv": "^8.2.0",
    "axios": "^1.6.8",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.30.10",
    "drizzle-zod": "^0.5.1",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "hpp": "^0.2.3",
    "joi": "^17.13.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.11.5",
    "ts-node": "^10.9.2",
    "uuid": "^9.0.1",
    "xss": "^1.0.15"
  }
}
